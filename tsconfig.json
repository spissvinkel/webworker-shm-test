{
    "include": [
        "./src/**/*",
        "./test/**/*"
    ],
    "compileOnSave": true,
    "compilerOptions": {
        "incremental": true,
        "target": "ES2018",
        "module": "commonjs",
        "lib": [ "ES2018", "dom" ],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./build",
        "newLine": "LF",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    }
}
